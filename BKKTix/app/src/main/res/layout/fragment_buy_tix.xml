<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d0e137"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Tix"
        android:textSize="56dp" />

    <Button
        android:id="@+id/btnBuy20Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buy 20 min ticket"/>

    <Button
        android:id="@+id/btnBuy60Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buy 60 min ticket"/>
    <Button
        android:id="@+id/btnBuy120Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buy 120 min ticket"/>

</LinearLayout>